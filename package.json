{
  "name": "root",
  "description": "Foundational Layout Primitives for your React App",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bedrock-Layouts/Bedrock.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": "Jarvis1010 <travis.mair@gmail.com>",
  "homepage": "https://bedrock-layout.dev/",
  "scripts": {
    "start": "storybook dev -p 9001 -c .storybook",
    "test": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch --notify",
    "lint": "lerna run lint --parallel",
    "lint-staged": "lint-staged",
    "check-types": "lerna run check-types --parallel",
    "check-format": "lerna run check-format --parallel",
    "fix-format": "lerna run fix-format --parallel",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "cz": "cz",
    "clean": "lerna clean",
    "build": "lerna run build",
    "build:storybook": "storybook build",
    "prepublish": "yarn build",
    "publish": "lerna publish",
    "publish:ci": "yarn publish -- --no-commit-hooks --ignore-scripts",
    "publish:fix": "lerna publish from-package",
    "verify": "yarn check-types && yarn lint && yarn check-format && yarn test:coverage",
    "postinstall": "husky install",
    "chromatic": "npx chromatic --build-script-name build:storybook --only-changed --project-token=$CHROMATIC_PROJECT_TOKEN"
  },
  "dependencies": {
    "@reach/menu-button": "^0.18.0",
    "@reach/visually-hidden": "^0.18.0",
    "@vitest/coverage-c8": "^0.25.1",
    "browserslist": "^4.16.5",
    "immer": "^9.0.6",
    "nth-check": "^2.0.1",
    "nx": "^15.0.4",
    "open-props": "^1.3.9"
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "^15.0.2",
    "@storybook/addon-actions": "^7.0.0-beta.19",
    "@storybook/addon-essentials": "^7.0.0-beta.19",
    "@storybook/addon-links": "^7.0.0-beta.19",
    "@storybook/react": "^7.0.0-beta.19",
    "@storybook/react-vite": "^7.0.0-beta.19",
    "@storybook/theming": "^7.0.0-beta.19",
    "@types/minify": "^9.0.0",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.12",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chromatic": "^6.0.4",
    "commitizen": "^4.2.3",
    "concat": "^1.0.3",
    "cssnano": "^5.0.10",
    "cssom": "^0.5.0",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.8.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-storybook": "^0.6.8",
    "husky": "^8.0.1",
    "i18next": "^22.0.4",
    "i18next-browser-languagedetector": "^7.0.0",
    "i18next-http-backend": "^2.0.0",
    "import-sort-style-module": "^6.0.0",
    "jest-styled-components": "^7.0.0",
    "jsdom": "^20.0.0",
    "lerna": "^6.0.1",
    "lerna-changelog": "^2.1.0",
    "lint-staged": "^13.0.1",
    "minify": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "pepjs": "^0.5.2",
    "postcss": "^8.4.6",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.3.1",
    "prettier-plugin-import-sort": "0.0.7",
    "prop-types": "^15.7.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-i18next": "^12.0.0",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "storybook": "^7.0.0-beta.19",
    "styled-components": "^5.3.6",
    "typescript": "^4.2.0",
    "typescript-eslint": "^0.0.1-alpha.0",
    "vite": "^4.0.3",
    "vite-plugin-turbosnap": "^1.0.0",
    "vitest": "^0.26.3",
    "webpack": "4"
  },
  "resolutions": {
    "json5": " >=2.2.2",
    "glob-parent": "^5.1.2",
    "trim": ">=0.0.3",
    "trim-newlines": ">=3.0.1"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "arrowParens": "always"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "eslint"
    ],
    "**/*.+(js|json|ts|tsx)": [
      "prettier --write"
    ],
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
